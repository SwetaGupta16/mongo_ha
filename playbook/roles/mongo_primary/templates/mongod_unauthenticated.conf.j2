# mongod.conf

# for documentation of all options, see:
#   http://docs.mongodb.org/manual/reference/configuration-options/

# where to write logging data.
systemLog:
  destination: file
  logAppend: true
  path: /var/log/mongodb/mongod.log

# Where to store data.
storage:
  dbPath: {{ mongodb_datadir_prefix }}db
  journal:
    enabled: true
#  engine:
#  mmapv1:
#  wiredTiger:


# network interfaces
net:
  port: {{ mongod_port }}
  bindIp: 0.0.0.0 
